{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
     "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowJs": true,
    "jsx": "preserve",
    "composite": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["@dcloudio/types"],
  },
  "include": ["./src/**/*", "tyeps/env.d.ts", "tyeps/auto-imports.d.ts", "tyeps/components.d.ts"],
}
